{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": { "enabled": true },
  "files": {
    "maxSize": 5242880,
    "ignore": [
      "**/.next/**",
      "**/dist/**",
      "**/out/**",
      "**/artifacts/**",
      "**/node_modules/**",
      "**/.git/**",
      "**/.github/**",
      "**/generated/**",
      "**/cache/**",
      "**/ios/**",
      "**/android/**",
      ".expo/**",
      ".openzeppelin",
      "sw.js",
      "packages/tsconfig",
      "expo-env.d.ts",
      "generated.ts",
      "tsconfig.*",
      "routeTree.gen.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "noNonNullAssertion": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": "warn",
        "noUnusedImports": {
          "fix": "safe",
          "level": "error"
        }
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noMisleadingCharacterClass": "warn",
        "noArrayIndexKey": "warn",
        "noConsoleLog": "warn",
        "noEmptyInterface": "warn"
      },
      "complexity": {
        "noForEach": "warn"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {}
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
